<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.setting.SettingFragment">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_avatar"
        android:layout_width="84dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/xuenai"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius_bottom_left="10dp"
        app:riv_corner_radius_bottom_right="10dp"
        app:riv_corner_radius_top_left="10dp"
        app:riv_corner_radius_top_right="10dp" />


    <TextView
        android:id="@+id/text_setting"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginLeft="144dp"
        android:layout_marginTop="48dp"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="@id/iv_avatar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/zuji_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="20dp"
        android:text="0"
        android:textSize="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_avatar" />

    <TextView
        android:id="@+id/shoucang_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="0"
        android:textSize="25dp"
        app:layout_constraintLeft_toLeftOf="@id/shoucang"
        app:layout_constraintTop_toBottomOf="@+id/iv_avatar" />

    <TextView
        android:id="@+id/zuji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="10dp"
        android:text="我的足迹"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zuji_count" />

    <TextView
        android:id="@+id/shoucang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="10dp"
        android:text="我的收藏"
        app:layout_constraintLeft_toRightOf="@+id/zuji"
        app:layout_constraintTop_toBottomOf="@+id/shoucang_count"
        app:layout_goneMarginLeft="20dp"/>
    <TextView
        android:id="@+id/biji_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="114dp"
        android:layout_marginTop="20dp"
        android:text="0"
        android:textSize="25dp"
        app:layout_constraintLeft_toLeftOf="@id/shoucang"
        app:layout_constraintTop_toBottomOf="@+id/iv_avatar" />
    <TextView
        android:id="@+id/biji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="10dp"
        android:text="我的笔记"
        app:layout_constraintLeft_toRightOf="@+id/shoucang"
        app:layout_constraintTop_toBottomOf="@+id/biji_count"
        app:layout_goneMarginLeft="20dp"/>
    <TextView
        android:id="@+id/wenda_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="204dp"
        android:layout_marginTop="20dp"
        android:text="0"
        android:textSize="25dp"
        app:layout_constraintLeft_toLeftOf="@id/shoucang"
        app:layout_constraintTop_toBottomOf="@+id/iv_avatar" />
    <TextView
        android:id="@+id/wenda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="10dp"
        android:text="我的问答"
        app:layout_constraintLeft_toRightOf="@+id/biji"
        app:layout_constraintTop_toBottomOf="@+id/wenda_count"
        app:layout_goneMarginLeft="20dp"/>

    <ImageView
        android:id="@+id/img_jinbi"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/jinbi"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/jinbi" />

    <TextView
        android:id="@+id/jinbi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="金币                                          >"
        android:textSize="22dp"
        android:layout_marginLeft="18dp"
        app:layout_constraintLeft_toRightOf="@id/img_jinbi"
        app:layout_constraintTop_toBottomOf="@id/zuji"
        app:layout_goneMarginLeft="20dp"
        app:layout_goneMarginTop="40dp" />

    <ImageView
        android:id="@+id/img_zhuti"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/zhuti"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/jinbi" />

    <TextView
        android:id="@+id/zhuti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"

        android:text="主题                                          >"
        android:textSize="22dp"
        app:layout_constraintLeft_toRightOf="@id/img_zhuti"
        android:layout_marginTop="-5dp"
        app:layout_constraintTop_toTopOf="@id/img_zhuti"
        app:layout_goneMarginLeft="20dp"
 />

    <ImageView
        android:id="@+id/img_caogao"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/caogao"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/zhuti" />

    <TextView
        android:id="@+id/caogao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="草稿箱                                      >"
        android:textSize="22dp"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toRightOf="@+id/img_caogao"
        app:layout_constraintTop_toBottomOf="@+id/zhuti"
        app:layout_goneMarginLeft="20dp"
 />

    <ImageView
        android:id="@+id/img_kefu"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/kefu"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/caogao" />

    <TextView
        android:id="@+id/kefu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="联系客服                                  >"
        android:textSize="22dp"
        app:layout_constraintLeft_toRightOf="@+id/img_caogao"
        app:layout_constraintTop_toTopOf="@+id/img_kefu"
        android:layout_marginTop="-6dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>