<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/chip1"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:background="@drawable/gradient">
    </LinearLayout>
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/tv_community_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:src="@drawable/xuenai"
        app:riv_corner_radius_bottom_left="30dp"
        app:riv_corner_radius_bottom_right="30dp"
        app:riv_corner_radius_top_left="30dp"
        app:riv_corner_radius_top_right="30dp" />
    <TextView
        android:id="@+id/tv_community_name"
        app:layout_constraintLeft_toRightOf="@id/tv_community_image"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        android:gravity="center_horizontal"
        android:textSize="24sp"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/tv_community_follow"
        app:layout_constraintLeft_toRightOf="@id/tv_community_image"
        app:layout_constraintTop_toBottomOf="@id/tv_community_name"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:gravity="center_horizontal"
        android:textSize="16sp"
        android:textColor="@color/white" />
    <CheckBox
        android:id="@+id/cb_community_follow"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:background="@drawable/select_follow"
        android:button="@null"
        android:gravity="center"
        android:text="@string/follow"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/tv_community_name"
        app:layout_constraintTop_toTopOf="@+id/tv_community_name" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_in_community"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toBottomOf="@id/chip1"
        app:layout_constraintLeft_toLeftOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>