<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- 文章标题 -->
            <TextView
                android:id="@+id/postDetailTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="8dp"
                android:text="文章标题"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- 分隔线 -->
            <View
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/postDetailTitle"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@android:color/darker_gray" />

            <!-- 标签 -->
            <TextView
                android:id="@+id/postDetailTagList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/postDetailTitle"
                android:layout_alignParentStart="true"
                android:layout_marginTop="16dp"
                android:text="标签"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="18sp" />

            <!-- 作者和时间 -->
            <TextView
                android:id="@+id/postDetailUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/postDetailTagList"
                android:layout_alignParentStart="true"
                android:layout_marginTop="8dp"
                android:text="作者和时间"
                android:textSize="14sp" />

            <!-- 分隔线 -->
            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/postDetailUsername"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@android:color/darker_gray" />

            <!-- 帖子内容 -->
            <TextView
                android:id="@+id/postDetailContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/postDetailUsername"
                android:layout_marginTop="16dp"
                android:text="帖子内容"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <!-- 分隔线 -->
            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/postDetailContent"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="@android:color/background_dark" />

            <TextView
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/postDetailContent"
                android:layout_marginTop="36dp"
                android:text="评论区"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- 评论区域 -->
            <ListView
                android:id="@+id/commentListView"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_below="@id/comment"
                android:layout_marginTop="14dp"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="1dp" />

        </RelativeLayout>

    </ScrollView>

    <!-- 固定区域，用于评论 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 评论框 -->
        <EditText
            android:id="@+id/commentEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="写下你的评论..." />

        <!-- 提交按钮 -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="submitComment"
            android:text="提交评论" />

    </LinearLayout>

</LinearLayout>